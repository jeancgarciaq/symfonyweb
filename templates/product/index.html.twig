{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Lista de Productos</h1>

    <p><a href="{{ path('app_product_create') }}">Crear nuevo producto</a></p>

    {% if products is empty %}
        <p>No hay productos registrados.</p>
    {% else %}
        <ul>
            {% for product in products %}
                <li>
                    {{ product.name }} - ${{ product.price }}
                    (<a href="{{ path('app_product_show', {id: product.id}) }}">Ver</a> |
                    <a href="{{ path('app_product_edit', {id: product.id}) }}">Editar</a> |
                    <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" 
                          onsubmit="return confirm('¿Estás seguro de que quieres eliminar {{ product.name }}?');" 
                          style="display:inline;" class="d-inline"> {# 'd-inline' para mantenerlo en la misma línea con Bootstrap #}
                        {# Este campo oculto es el token CSRF, ¡INDISPENSABLE para la seguridad! #}
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button type="submit" style="background: none; border: none; color: blue; text-decoration: underline; cursor: pointer; padding: 0;">Eliminar</button>
                    </form>)
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
